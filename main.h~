#ifndef _MAIN_H_
#define _MAIN_H_
#include <sys/types.h>
#include <sys/stat.h>
#include <unistd.h>


char tab[9] = {'l', 'R', 'r', 'd', 't', 'a', 'A', 'L', '\0'};
	
void get_argument(int argc, char *argv[]);
void    my_putstr(char *str);
void    my_put_nbr(int n);
/*int fstat(int filedes, struct stat *buf);*/

struct stat
{
	dev_t st_dev; /* Périphérique */
	ino_t st_ino; /* Numéro i-noeud */
	mode_t st_mode; /* Protection */
	nlink_t st_nlink; /* Nb liens matériels */
	uid_t st_uid; /* UID propriétaire */
	gid_t st_gid; /* GID propriétaire */
	dev_t st_rdev; /* Type périphérique */
	off_t st_size; /* Taille totale en octets */
	unsigned long st_blksize; /* Taille de bloc pour E/S */
	unsigned long st_blocks; /* Nombre de blocs alloués */
	time_t st_atime; /* Heure dernier accès */
	time_t st_mtime; /* Heure dernière modification */
	time_t st_ctime; /* Heure dernier changement */
}

#endif
