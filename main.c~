#include <stdio.h>
#include "main.h"

void get_argument(int argc, char *argv[])
{
	int i;
	int a;
	
	i = 0;
	a = 1;
	if (argc >= 2)
		{
			while (tab[i] != '\0')
				{
					if (argv[1][0] == '-')
						{
							if (argv[a][1] == tab[i])
								{
									my_putstr(argv[a]);
									my_putstr("\n");
									a++;
									i = 0;
								}
							my_putstr("bendo");
							i++;
						}
				
				}
		}
	else
		{
			my_putstr("Argument absent\n");
		}
}

int	main (int argc, char *argv[])
{
	get_argument(argc, argv);
	return 0;
}
